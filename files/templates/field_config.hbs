// Generated field configuration for {{nodeType}}
export const {{camelCase nodeType}}Fields: UnifiedFieldDefinition[] = [
  {{#each fields}}
  {
    name: '{{name}}',
    type: '{{#if (eq type 'enum')}}select{{else if (eq type 'boolean')}}checkbox{{else if (eq type 'number')}}number{{else if (eq type 'code')}}code{{else}}text{{/if}}',
    label: '{{humanize name}}',
    required: {{required}},
    {{#if defaultValue}}
    defaultValue: {{json defaultValue}},
    {{/if}}
    {{#if placeholder}}
    placeholder: '{{placeholder}}',
    {{/if}}
    {{#if description}}
    description: '{{description}}',
    {{/if}}
    {{#if (eq type 'enum')}}
    options: [
      {{#each values}}
      { value: '{{this}}', label: '{{humanize this}}' },
      {{/each}}
    ],
    {{/if}}
    {{#if validation}}
    validation: {{json validation}},
    {{/if}}
  },
  {{/each}}
];