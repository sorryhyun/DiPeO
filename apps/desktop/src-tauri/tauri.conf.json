{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "DiPeO",
  "version": "0.1.0",
  "identifier": "com.dipeo.desktop",
  "build": {
    "beforeDevCommand": "cd ../web && pnpm dev",
    "beforeBuildCommand": "cd ../web && pnpm run build",
    "devUrl": "http://localhost:3000",
    "frontendDist": "../../web/dist"
  },
  "bundle": {
    "active": true,
    "targets": ["nsis"],
    "windows": {
      "nsis": {
        "installerIcon": "icons/icon.ico"
      },
      "wix": {
        "language": "en-US"
      }
    },
    "category": "DeveloperTool",
    "shortDescription": "Visual AI Workflow Builder",
    "longDescription": "DiPeO is a visual programming environment for building and executing AI agent workflows",
    "icon": ["icons/icon.png"],
    "publisher": "DiPeO Team",
    "copyright": "Copyright Â© 2024 DiPeO",
    "license": "../../../LICENSE"
  },
  "app": {
    "windows": [
      {
        "title": "DiPeO",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "alwaysOnTop": false,
        "center": true,
        "minWidth": 800,
        "minHeight": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {}
}