"import React, { useCallback, useEffect, useState } from 'react';\n\ntype CounterSectionProps = {\n  title?: string;\n  initial?: number;\n  onChange?: (value: number) => void;\n  error?: string;\n  max?: number;\n  min?: number;\n};\n\nconst CounterSection: React.FC<CounterSectionProps> = ({\n  title = 'Counter',\n  initial = 0,\n  onChange,\n  error,\n  max = Number.MAX_SAFE_INTEGER,\n  min = 0,\n}) => {\n  const [count, setCount] = useState<number>(initial);\n\n  useEffect(() => {\n    setCount(initial);\n  }, [initial]);\n\n  const increment = useCallback(() => {\n    setCount((c) => {\n      const next = Math.min(c + 1, max);\n      onChange?.(next);\n      return next;\n    });\n  }, [max, onChange]);\n\n  const decrement = useCallback(() => {\n    setCount((c) => {\n      const next = Math.max(c - 1, min);\n      onChange?.(next);\n      return next;\n    });\n  }, [min, onChange]);\n\n  return (\n    <section aria-label={title} className=\"counter-section\">\n      <div className=\"counter-header\">\n        <h3>{title}</h3>\n        {error ? <span role=\"alert\" className=\"counter-error\">{error}</span> : null}\n      </div>\n      <div className=\"counter-body\">\n        <button type=\"button\" onClick={decrement} aria-label=\"Decrease\" className=\"btn btn-secondary\">-</button>\n        <span className=\"counter-value\" aria-live=\"polite\">{count}</span>\n        <button type=\"button\" onClick={increment} aria-label=\"Increase\" className=\"btn btn-primary\">+</button>\n      </div>\n    </section>\n  );\n};\n\nexport default CounterSection;"