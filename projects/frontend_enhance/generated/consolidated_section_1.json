"import React, { ReactNode, useCallback } from 'react';\n\ntype InfoSectionProps = {\n  title?: string;\n  description?: string;\n  children?: ReactNode;\n  onRefresh?: () => void;\n  error?: string;\n  className?: string;\n};\n\nconst InfoSection: React.FC<InfoSectionProps> = ({\n  title = 'Info',\n  description,\n  children,\n  onRefresh,\n  error,\n  className = '',\n}) => {\n  const handleRefresh = useCallback(() => {\n    try {\n      onRefresh?.();\n    } catch {\n      // No-op: ensure UI remains responsive even if refresh handler fails\n    }\n  }, [onRefresh]);\n\n  return (\n    <section aria-label={title} className={`info-section ${className}`.trim()}>\n      <div className=\"info-header\">\n        <div className=\"info-title-wrap\">\n          <h2 className=\"info-title\">{title}</h2>\n          {error ? <span role=\"alert\" className=\"info-error\">{error}</span> : null}\n        </div>\n        {onRefresh ? (\n          <button type=\"button\" className=\"btn btn-ghost\" onClick={handleRefresh} aria-label=\"Refresh\">\n            Refresh\n          </button>\n        ) : null}\n      </div>\n      {description ? <p className=\"info-description\">{description}</p> : null}\n      <div className=\"info-body\">{children}</div>\n    </section>\n  );\n};\n\nexport default InfoSection;"